root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
quote_type = single

[*.js]
quote_type = single

[*.ts]
quote_type = single

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.jsx]
indent_size = 2
quote_type = single

[*.tsx]
indent_size = 2
quote_type = single

